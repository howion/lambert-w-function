{
    "compilerOptions": {
        "lib": ["ES2015", "DOM"],
        "removeComments": true,
        "noImplicitAny": true,
        "target": "ES5",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "alwaysStrict": true,
        "declaration": true
    },
    "exclude": ["node_modules", "dist"]
}
